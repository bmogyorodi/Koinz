<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bence.koinz.Bonuses">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonradius1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collect Coinz from 40 meters(cost 800G)" />

        <Button
            android:id="@+id/buttonradius2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Collect Coinz from 65 meters(cost 1000G)" />

        <Button
            android:id="@+id/buttonradius3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Collect Coinz from 100 meters(cost 1500G)" />

        <Button
            android:id="@+id/buttondaily1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collect 30 coinz daily (cost 500G)" />

        <Button
            android:id="@+id/buttondaily2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Collect 40 coinz daily (cost 750G)" />

        <Button
            android:id="@+id/buttondaily3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Collect  all daily (cost 1000G)" />

        <TextView
            android:id="@+id/display_select_bonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select bonus"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/displaygold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gold:" />

        <Button
            android:id="@+id/buttonpurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm purchase" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
